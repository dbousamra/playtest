# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the model list
GET     /                           controllers.Application.index

# Models list (look at the default values for pagination parameters)
GET     /models                  controllers.Application.list(p:Int ?= 0, s:Int ?= 2, f ?= "")

# Add computer
GET     /models/new              controllers.Application.create
POST    /models                  controllers.Application.save

# Edit existing car model
GET     /models/:id              controllers.Application.edit(id:Long)
POST    /models/:id              controllers.Application.update(id:Long)

# Delete a computer
POST    /models/:id/delete       controllers.Application.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

